<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>

    <definition name=".layout" template="/WEB-INF/jsp/layout.jsp">
        <put-attribute name="header" value="/WEB-INF/jsp/header.jsp"/>
        <put-attribute name="nav" value="/WEB-INF/jsp/nav.jsp"/>
    </definition>

    <definition name="login" extends=".layout">
        <put-attribute name="body" value="/WEB-INF/jsp/login.jsp"/>
    </definition>

    <definition name="home" extends=".layout">
        <put-attribute name="body" value="/WEB-INF/jsp/home.jsp"/>
    </definition>

    <definition name="register" extends=".layout">
        <put-attribute name="body" value="/WEB-INF/jsp/register.jsp"/>
    </definition>

    <definition name="gallery" extends=".layout">
        <put-attribute name="body" value="/WEB-INF/jsp/gallery.jsp"/>
    </definition>

</tiles-definitions>